#!/usr/bin/env ruby
status = `pactl get-source-mute '@DEFAULT_SOURCE@'`.strip
input = status.split(':')[1].strip
muted = input == 'yes'
out = ""
if muted
  out += "%{B#cc241d}"
  out += "%{F#ebdbb2}"
  out += " "

  out += "ï„±"

  out += " "
else
  out += " "

  out += "ï„°"

  out += " "
end

out += "%{F-}"

puts out
