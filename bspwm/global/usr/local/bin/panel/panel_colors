#!/usr/bin/env bash

. $HOME/.Xresourceshelper

## Colours taken from NLKNguyen/papercolor-theme
_RED="$(rgb_to_rgba $(colour_from_xresources "col_red"))"
_ORANGE="$(rgb_to_rgba $(colour_from_xresources "col_yellow"))"
_YELLOW="$(rgb_to_rgba $(colour_from_xresources "col_yellow_dark"))"
_GREEN="$(rgb_to_rgba $(colour_from_xresources "col_green"))"
_GREY="$(rgb_to_rgba $(colour_from_xresources "col_white"))"
_BLUE="$(rgb_to_rgba $(colour_from_xresources "col_blue"))"
_BLUE_DARK="$(rgb_to_rgba $(colour_from_xresources "col_blue_dark"))"
_VIOLET="$(rgb_to_rgba $(colour_from_xresources "col_magenta"))"
_MAGENTA="$(rgb_to_rgba $(colour_from_xresources "col_red_dark"))"
_WHITE='#ffffffff'
_FG_COL="$_WHITE"
# 0f
_BG_COL=$_BLUE

COLOR_FOREGROUND=$_FG_COL
COLOR_BACKGROUND=$_BG_COL

COLOR_ACTIVE_MONITOR_FG=$_FG_COL
COLOR_ACTIVE_MONITOR_BG=$_GREEN

COLOR_INACTIVE_MONITOR_FG=$_FG_COL
# '#FF34322E'
COLOR_INACTIVE_MONITOR_BG=$_BG_COL

COLOR_FOCUSED_OCCUPIED_FG=$_FG_COL
COLOR_FOCUSED_OCCUPIED_BG=$_RED

## empty selected
COLOR_FOCUSED_FREE_FG=$_FG_COL
COLOR_FOCUSED_FREE_BG=$_GREY

COLOR_OCCUPIED_FG=$_FG_COL
COLOR_OCCUPIED_BG=$_MAGENTA

# keep it the same colour as the main background
COLOR_FREE_FG=$_FG_COL
COLOR_FREE_BG=$_BG_COL

## layout - LMFT
COLOR_LAYOUT_FG=$_FG_COL
# '#FF34322E'
COLOR_LAYOUT_BG=$_BLUE

## xtitle
COLOR_TITLE_BG=$COLOR_BACKGROUND
COLOR_TITLE_FG=$_FG_COL

# STATUS - top right
COLOR_STATUS_FG=$_FG_COL
COLOR_STATUS_BG=$_BG_COL

COLOR_FOCUSED_URGENT_FG='#FF34322E'
COLOR_FOCUSED_URGENT_BG='#FFF9A299'

COLOR_URGENT_FG='#FFF9A299'
COLOR_URGENT_BG='#FF34322E'


## Specific panel_bar colours

COLOR_PACKAGE_IMPORTANT_BG=$_RED
COLOR_PACKAGE_IMPORTANT_FG=$_FG_COL

COLOR_PACKAGE_BG=$_MAGENTA
COLOR_PACKAGE_FG=$_FG_COL

COLOR_NETWORK_TUN_BG=$_VIOLET
COLOR_NETWORK_TUN_FG=$_FG_COL

COLOR_NETWORK_NORMAL_BG=$_GREEN
COLOR_NETWORK_NORMAL_FG=$_FG_COL

COLOR_NETWORK_DIS_BG=$_RED
COLOR_NETWORK_DIS_FG=$_FG_COL

COLOR_VOLUME_ON_BG=$_MAGENTA
COLOR_VOLUME_ON_FG=$_FG_COL

COLOR_VOLUME_OFF_BG=$COLOR_STATUS_BG
COLOR_VOLUME_OFF_FG=$_FG_COL

COLOR_BATTERY_LOW_BG=$_MAGENTA
COLOR_BATTERY_LOW_FG=$_FG_COL

COLOR_BATTERY_NORMAL_BG=$COLOR_STATUS_BG
COLOR_BATTERY_NORMAL_FG=$_FG_COL

COLOR_HOSTNAME_BG=$COLOR_STATUS_BG
COLOR_HOSTNAME_FG=$_FG_COL

COLOR_CLOCK_NORMAL_BG=$_BG_COL
COLOR_CLOCK_NORMAL_FG=$_FG_COL

COLOR_CLOCK_LATE_BG=$_RED
COLOR_CLOCK_LATE_FG=$_FG_COL


COLOR_MUSIC_PLAYING_BG=$_GREEN
COLOR_MUSIC_PLAYING_FG=$_FG_COL

COLOR_MUSIC_PAUSED_BG=$_ORANGE
COLOR_MUSIC_PAUSED_FG=$_FG_COL

COLOR_MUSIC_STOPPED_BG=$_BLUE
COLOR_MUSIC_STOPPED_FG=$_FG_COL
