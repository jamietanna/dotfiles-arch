[global]
    format = "<b><u>%s</u></b>\n\n%b"
    allow_markup = yes
    follow = keyboard
    sort = yes
    history_length = 20
    indicate_hidden = yes
    sticky_history = yes

    # Aesthetical settings {{{
    font = LiberationMono 12
    # place notifications in the top right of the screen
    geometry = "300x5-30+20"
    alignment = center
    word_wrap = yes
    ignore_newline = no
    padding = 8
    horizontal_padding = 8
    transparency = 0
    # }}}

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#458588"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_normal]
    background = "#d65d0e"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_critical]
    background = "#cc241d"
    foreground = "#ebdbb2"
    timeout = 0

